<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".second">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/left_arrow"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/heart"
                android:backgroundTint="#AEA8A8"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 30"
                    android:textSize="@dimen/_17sdp"
                    android:textColor="#FFAB00"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This chair is so populer\ndesign in the india."
            android:textColor="#817D7D"
            android:layout_marginTop="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/star"/>

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/star"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/star"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/star"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/star"
                android:backgroundTint="#BAB3B3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textSize="@dimen/_12sdp"
                android:textColor="#5E5757"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                android:textColor="#000"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:backgroundTint="#C51162"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:backgroundTint="#FF6D00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:backgroundTint="#FFD600"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#000"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                android:backgroundTint="#FFAB00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@drawable/minus"
                    android:backgroundTint="#fff"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                android:backgroundTint="#FFAB00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@drawable/plus"
                    android:backgroundTint="#fff"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/add"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="#FFAB00"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/one"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#029A85">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recently View"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_120sdp"
                            app:cardCornerRadius="@dimen/_20sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f_6"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_gravity="bottom"
                                android:background="#80000000"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lorem ipsum"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_15sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This material is create by USA."
                                    android:textColor="#DAD7D7"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_20sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f_7"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_gravity="bottom"
                                android:background="#80000000"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lorem ipsum"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_15sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This material is create by IND."
                                    android:textColor="#DAD7D7"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_20sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f_8"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_gravity="bottom"
                                android:background="#80000000"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lorem ipsum"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_15sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This material is create by UAE."
                                    android:textColor="#DAD7D7"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_3sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>